
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <h3>New Event</h3>

        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="boxed">
                        <!-- Title Bart Start -->
                        <div class="title-bar white">
                            <h4>Generic</h4>
                        </div>
                        <!-- Title Bart End -->

                        <div class="inner no-radius">

                            <form method="post" action="#" class="basic-form">
                                <label for="name">Name</label>
                                {{input type=text name=defaultConfig.name id=defaultConfig.name placeholder="Enter Name" value=defaultConfig.name}}

                                <label for="name">Description</label>
                                {{input type=text name=defaultConfig.description id=defaultConfig.description placeholder="Enter Description" value=defaultConfig.description}}


                            </form>

                        </div>
                    </div>
            </div>


            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="boxed">
                    <!-- Title Bart Start -->
                    <div class="title-bar white">
                        <h4>Devices</h4>
                    </div>
                    <!-- Title Bart End -->

                    <div class="inner no-radius">

                        <form method="post" action="#" class="basic-form">
                            <ul class="socket-list">
                            {{#each devices}}
                                {{render "deviceActionItem" this}}
                            {{/each}}
                            </ul>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>