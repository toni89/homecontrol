<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <h3>Events</h3>

        <div class="container">

            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

                    <div class="boxed">
                        {{#link-to 'events.new'}}<button type="button" class="btn btn-xs btn-primary">New Event</button>{{/link-to}}
                        <!-- Title Bart Start -->
                        <div class="title-bar white">
                            <h4>Create new event</h4>
                        </div>
                        <!-- Title Bart End -->

                        <div class="inner no-radius">

                            <form method="post" action="#" class="basic-form">
                                <label for="name">Name & Beschreibung:</label>
                                {{input type=text name=defaultConfig.name id=defaultConfig.name placeholder="Eventname eingeben" value=defaultConfig.name}}
                                {{input type=text name=defaultConfig.description id=defaultConfig.description placeholder="Beschreibung eingeben" value=defaultConfig.description}}

                                <label for="name">Start Uhrzeit</label>
                                {{input type=text name=defaultConfig.start_hh id=defaultConfig.start_hh placeholder="hh" value=defaultConfig.start_hh}}
                                {{input type=text name=defaultConfig.start_mm id=defaultConfig.start_mm placeholder="mm" value=defaultConfig.start_mm}}
                                <label for="name">End Uhrzeit</label>
                                {{input type=text name=defaultConfig.end_hh id=defaultConfig.end_hh placeholder="hh" value=defaultConfig.end_hh}}
                                {{input type=text name=defaultConfig.end_mm id=defaultConfig.end_mm placeholder="mm" value=defaultConfig.end_mm}}

                                <label for="name">TÃ¤glich wiederholen?</label>
                                {{input type="checkbox" name=defaultConfig.repeat_daily checked=defaultConfig.repeat_daily}}

                                <div class="row">
                                    <div class="col-md-6 text-right">
                                        <button {{action 'submit'}} type="button" class="btn btn-sm btn-success">Save</button>
                                    </div>
                                </div>

                                {{#each devices}}
                                    <li>
                                        <span>
                                            {{device.name}}
                                            {{device.description}}
                                        </span>
                                    </li>
                                {{/each}}

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>