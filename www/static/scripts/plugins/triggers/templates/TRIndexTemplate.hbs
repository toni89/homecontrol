
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <h3>Triggers</h3>

        <div class="container">

            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

                    <div class="boxed">
                        {{#link-to 'triggers.new'}}<button type="button" class="btn btn-xs btn-primary">New Trigger</button>{{/link-to}}
                        <!-- Title Bart Start -->
                        <div class="title-bar white">
                            <h4>Triggers</h4>
                        </div>
                        <!-- Title Bart End -->

                        <div class="inner no-radius">
                            <ul class="socket-list">
                                {{#each trigger in triggers}}
                                    <li>
                                        <span>
                                            {{trigger.trigger.name}}
                                            {{#link-to 'triggers.edit' trigger._id}}<button type="button" class="btn btn-xs btn-primary">Edit</button>{{/link-to}}
                                            <button {{action 'delete' trigger._id}} type="button" class="btn btn-xs btn-primary">Delete</button>
                                        </span>
                                    </li>
                                {{/each}}
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
