<h3>Create Socket</h3>

<div class="row">
    <div class="boxed no-padding col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <div class="inner">

            <form method="post" action="#" class="basic-form">
                <label for="name">Name</label>
                {{input type=text name=name id=name placeholder="Enter socket name" value=name}}

                <label for="code">Code</label>
                {{input type=text name=code id=code placeholder="Enter socket code" value=code}}

                <label for="bootstate">Set on Boot</label>
                <div class="col-md-4">
                    <div>
                        <input type="radio" class="icheck-blue" value="1" name="icheck-blue"/>
                        <label class="icheck-label">None</label>
                    </div>
                </div>

                <div class="col-md-4">
                    <div>
                        <input type="radio" class="icheck-blue" value="1" name="icheck-blue"/>
                        <label class="icheck-label">On</label>
                    </div>
                </div>

                <div class="col-md-4">
                    <div>
                        <input type="radio" class="icheck-blue" value="1" name="icheck-blue"/>
                        <label class="icheck-label">Off</label>
                    </div>
                </div>

                <label for="groups">Groups</label>

                <div class="col-md-4">
                    <div>
                        <input type="checkbox" class="icheck-blue" value="1" name="icheck-blue-checkbox"/>
                        <label class="icheck-label">Wohnzimmer</label>
                    </div>
                </div>

                <div class="col-md-4">
                    <div>
                        <input type="checkbox" class="icheck-blue" value="1" name="icheck-blue-checkbox"/>
                        <label class="icheck-label">Pool</label>
                    </div>
                </div>

                <div class="col-md-4">
                    <div>
                        <input type="checkbox" class="icheck-blue" value="1" name="icheck-blue-checkbox"/>
                        <label class="icheck-label">KÃ¼che</label>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-6 text-right">
                        <button {{action 'submit'}} type="button" class="btn btn-sm btn-success">Create</button>
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>

