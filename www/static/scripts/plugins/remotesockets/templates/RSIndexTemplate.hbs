<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <h3>Remotesockets1</h3>

        <div class="container">

            <div class="row">


                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="boxed">

                        <!-- Title Bart Start -->
                        <div class="title-bar white">
                            <h4>Generated Content</h4>
                        </div>
                        <!-- Title Bart End -->

                        <div class="inner no-radius">

                            {{#each sockets}}
                                {{view App.RemotesocketsButtonView}}
                            {{/each}}

                        </div>
                    </div>
                </div>

            </div>


            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="boxed">

                        <!-- Title Bart Start -->
                        <div class="title-bar white">
                            <h4>Sockets</h4>
                        </div>
                        <!-- Title Bart End -->

                        <div class="inner no-radius">

                            <ul class="socket-list">

                                <li class="nav">
                                    {{#link-to 'remotesockets.new'}}<span class="create-task"><i class="fa fa-plus-circle"></i>  Create Socket</span>{{/link-to}}
                                </li>

                                {{#each sockets}}
                                    <li>
                                        <span><b>{{name}}</b> (Code: {{code}})</span>
                                        <div class="actions">
                                            {{#link-to 'remotesockets.edit' _id}}<button type="button" class="btn btn-xs btn-primary">Edit</button>{{/link-to}}
                                            <button {{action 'deleteSocket' _id}} type="button" class="btn btn-xs btn-danger">Delete</button>
                                        </div>
                                    </li>
                                {{/each}}
                            </ul>

                        </div>

                    </div>
                </div>


            </div>

        </div>
    </div>
</div>